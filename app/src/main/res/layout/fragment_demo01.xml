<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/app_head_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="描述：在Android项目中，会遇到时间选择或者地点选择的需求，那么下面的一个Demo实例，就是一个基于Android非常绚丽的时间器"
                android:padding="10dp"
                android:textSize="13sp"
                android:textColor="@color/gray_999999"
                android:ellipsize="end"
                android:maxLines="3"
                android:lineSpacingMultiplier="1.2"
                android:gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="项目地址：https://github.com/JZXiang/TimePickerDialog"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="13sp"
                android:textColor="@color/gray_999999"
                android:ellipsize="end"
                android:maxLines="3"
                android:lineSpacingMultiplier="1.2"
                android:gravity="left"/>


            <TextView
                android:id="@+id/btn_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="年_月_日_时_分"
                android:background="@drawable/bt_bg_select"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/btn_year_month_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="年_月_日"
                android:background="@drawable/bt_bg_select"
                android:textSize="15sp"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/btn_year_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="年_月"
                android:background="@drawable/bt_bg_select"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/btn_month_day_hour_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="月_日_时_分"
                android:background="@drawable/bt_bg_select"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/btn_hour_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="时_分"
                android:background="@drawable/bt_bg_select"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>